{
  "name": "pollsquad-functions",
  "description": "Cloud Functions for PollSquad",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "18"
  },
  "main": "lib/index.js",
  "scripts": {
    "lint": "eslint .",
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
